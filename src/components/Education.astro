    ]
  },
  {
    degree: "Edici贸n y PostProducci贸n Digital",
    institution: "Cice Escuela Profesional",
    period: "2015 - 2017",
    description: "Cursos especializados en Postproducci贸n de cine y TV",
    achievements: [
      "VFX",
      "Nuke Certified  Practitioner",
      "After Effects Professional Certificate"
    ]
  }
];
---


<div class="education-wrapper">
  <h3 class="education-title"> Formaci贸n Acad茅mica</h3>
  
  <div class="timeline">
    {education.map((edu, index) => (
      <div class="timeline-item" style={`animation-delay: ${index * 0.15}s`}>
        <div class="timeline-dot"></div>
        <div class="timeline-content">
          <div class="timeline-header">
            <h4 class="timeline-degree">{edu.degree}</h4>
            <span class="timeline-period">{edu.period}</span>
          </div>
          <p class="timeline-institution">{edu.institution}</p>
          <p class="timeline-description">{edu.description}</p>
          {edu.achievements && edu.achievements.length > 0 && (
            <ul class="timeline-achievements">
              {edu.achievements.map((achievement) => (
                <li class="achievement-item"> {achievement}</li>
              ))}
            </ul>
          )}
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .education-wrapper {
    margin: 1rem 0 4rem;
    padding: 2rem;
    background: linear-gradient(145deg, #0d1117 0%, #1a1f2a 100%);
    border-radius: 24px;
    border: 1px solid #30363d;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    position: relative;
    overflow: hidden;
  }

 
  .education-wrapper::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(63, 185, 80, 0.1) 0%, transparent 70%);
    animation: rotate 15s linear infinite;
    z-index: 0;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .education-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 2.5rem;
    position: relative;
    z-index: 1;
    display: inline-block;
    background: #3fb950;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .timeline {
    position: relative;
    z-index: 1;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 20px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, #3fb950, #2f81f7, #3fb950);
    opacity: 0.5;
  }

  .timeline-item {
    position: relative;
    padding-left: 60px;
    margin-bottom: 2.5rem;
    opacity: 0;
    animation: slideIn 0.6s ease-out forwards;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }



  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.3);
      opacity: 0.8;
    }
  }

  .timeline-content {
    background: rgba(22, 27, 34, 0.7);
    backdrop-filter: blur(10px);
    padding: 1.5rem;
    border-radius: 16px;
    border: 1px solid #30363d;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .timeline-content:hover {
    transform: translateY(-5px) scale(1.02);
    border-color: #3fb950;
    box-shadow: 0 10px 30px rgba(63, 185, 80, 0.2);
  }

  .timeline-content::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(63, 185, 80, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .timeline-content:hover::after {
    opacity: 1;
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .timeline-degree {
    font-size: 1.2rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0;
    background: linear-gradient(135deg, #fff, #b0b8c5);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .timeline-period {
    font-size: 0.9rem;
    color: #3fb950;
    background: rgba(63, 185, 80, 0.1);
    padding: 0.3rem 1rem;
    border-radius: 20px;
    border: 1px solid rgba(63, 185, 80, 0.3);
  }

  .timeline-institution {
    font-size: 1rem;
    color: #b0b8c5;
    margin-bottom: 0.8rem;
    font-weight: 500;
  }

  .timeline-description {
    font-size: 0.95rem;
    color: #848d97;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .timeline-achievements {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }

  .achievement-item {
    font-size: 0.9rem;
    color: #d0d7de;
    background: rgba(47, 129, 247, 0.1);
    padding: 0.3rem 1rem;
    border-radius: 20px;
    border: 1px solid rgba(47, 129, 247, 0.3);
    transition: all 0.2s ease;
  }

  .achievement-item:hover {
    background: rgba(47, 129, 247, 0.2);
    transform: scale(1.05);
    border-color: #2f81f7;
  }

  @media (max-width: 768px) {
    .education-wrapper {
      padding: 1.5rem;
    }

    .timeline::before {
      left: 15px;
    }

    .timeline-item {
      padding-left: 45px;
    }

    .timeline-dot {
      left: 7px;
    }

    .timeline-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
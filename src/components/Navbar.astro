<style is:global>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: rgba(10, 12, 16, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid #30363d;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    z-index: 1000;
    transition: all 0.3s ease;
    padding: 0;
  }

  .nav-container {
    max-width: 900px;
    margin: 0 auto;
    
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }


  .nav-menu {
    display: flex;
    list-style: none;
    gap: 0;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    color: #b0b8c5;
    text-decoration: none;
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    transition: all 0.3s ease;
    position: relative;
    display: block;
    font-size: 0.95rem;
  }

  .nav-link:hover {
    color: #3fb950;
  }

  .nav-link.active {
    color: #3fb950;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #3fb950;
    animation: slideIn 0.3s ease;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      width: 0;
    }
    to {
      opacity: 1;
      width: 100%;
    }
  }


  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
    }

    .nav-link {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }

    .logo-text {
      font-size: 1rem;
    }
  }
</style>
---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";

const myData = {
  name: "CyberFrank77 CV",
  title: "Full Stack Developer en pr√°cticas - SegundoPlano",
  location: "Madrid - Spain",
};


---

<Layout title="CyberFrank CV">
	<section class="contact">
      <div class="container">
        <div class="contact-links">
          <a href="https://github.com/CyberFrank77" target="_blank" rel="noopener noreferrer">GitHub</a>
          <a href="https://www.linkedin.com/in/francisco-fern%C3%A1ndez-347536197/" target="_blank" rel="noopener noreferrer">LinkedIn</a>
          <a href="mailto:developfrank@gmail.com">Email</a>
        </div>
      </div>
    </section>
  <main class="main-content">
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-name">{myData.name}</h1>
          <h2 class="hero-title">{myData.title}</h2>
		  
          <div class="hero-meta">
            <span class="hero-location">üìç {myData.location}</span>
          </div>
        </div>
      </div>
    </section>

   
    <Experience />

    
  </main>
</Layout>

<style>
  .main-content {
    background-color: #0a0c10;
    min-height: 100vh;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .hero {
    padding: 0rem 0 2rem;
    background: linear-gradient(180deg, #0d1117 0%, #0a0c10 100%);
    border-bottom: 1px solid #30363d;
  }

  .hero-content {
    text-align: left;
  }

  .hero-name {
    font-size: 3rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .hero-title {
    font-size: 1.5rem;
    font-weight: 400;
    color: #b0b8c5;
    margin-bottom: 1rem;
  }

  .hero-meta {
    display: flex;
    gap: 2rem;
    color: #848d97;
    font-size: 1rem;
  }

  .hero-location,
  .hero-availability {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .contact {
    padding: 1rem 0;
    background-color: #0d1117;
    border-top: 1px solid #30363d;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 2rem;
  }

  .contact-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .contact-links a {
    color: #b0b8c5;
    text-decoration: none;
    font-size: 1.1rem;
    transition: color 0.2s;
    position: relative;

  }

  .contact-links a:hover {
    color: #ffffff;
  }

  .contact-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #3fb950;
    transition: width 0.2s;
  }

  .contact-links a:hover::after {
    width: 100%;
  }

  @media (max-width: 768px) {
    .hero-name {
      font-size: 2.5rem;
    }

    .hero-title {
      font-size: 1.25rem;
    }

    .hero-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .container {
      padding: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 2rem 0;
    }

    .hero-name {
      font-size: 2rem;
    }

    .contact-links {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>